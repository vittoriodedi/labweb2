@page "/"
@rendermode InteractiveServer

<PageTitle>Home</PageTitle>

<MudCarousel Class="mud-width-full" Style="height:750px;" ShowArrows="@arrows" ShowBullets="@bullets" EnableSwipeGesture="@enableSwipeGesture" AutoCycle="@autocycle" TData="object">
    <MudCarouselItem Transition="transition">
        <img class="wallpaper" src="data/Wallpaper_1.jpg" alt="Wallpaper 1" />
    </MudCarouselItem>
    <MudCarouselItem Transition="transition">
        <img class="wallpaper" src="data/Wallpaper_2.jpg" alt="Wallpaper 2" />
    </MudCarouselItem>
    <MudCarouselItem Transition="transition">
        <img class="wallpaper" src="data/Wallpaper_3.jpg" alt="Wallpaper 3" />
    </MudCarouselItem>
    <MudCarouselItem Transition="transition">
        <img class="wallpaper" src="data/Wallpaper_4.jpg" alt="Wallpaper 4" />
    </MudCarouselItem>
    <MudCarouselItem Transition="transition">
        <img class="wallpaper" src="data/Wallpaper_5.jpg" alt="Wallpaper 5" />
    </MudCarouselItem>
    <MudCarouselItem Transition="transition">
        <img class="wallpaper" src="data/Wallpaper_6.jpg" alt="Wallpaper 6" />
    </MudCarouselItem>
</MudCarousel>

@code {
    private bool arrows = true;
    private bool bullets = false;
    private bool enableSwipeGesture = true;
    private bool autocycle = true;
    private Transition transition = Transition.Fade;
}
